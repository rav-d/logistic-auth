# TIR Browser Platform - Auth Service Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================
SERVICE_NAME=auth
SERVICE_VERSION=1.0.0
NODE_ENV=development
PORT=3000

# =============================================================================
# AWS CONFIGURATION
# =============================================================================
AWS_REGION=eu-central-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# =============================================================================
# AWS SECRETS MANAGER
# =============================================================================
SERVICE_SECRET_ARN=arn:aws:secretsmanager:eu-central-1:123456789012:secret:tir-browser-auth-secret

# =============================================================================
# DYNAMODB CONFIGURATION
# =============================================================================
DYNAMO_TABLE_NAME=tir-auth-main-development

# =============================================================================
# COGNITO CONFIGURATION
# =============================================================================
COGNITO_USER_POOL_ID=eu-central-1_xxxxxxxxx
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
COGNITO_REGION=eu-central-1
COGNITO_USE_ADMIN_AUTH=false
COGNITO_CLIENT_SECRET=

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOKI_HOST=http://localhost:3100

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
FRONTEND_URL=https://tirbrowser.com
EMAIL_FROM=noreply@tirbrowser.com

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,https://tirbrowser.com
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=1h

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# REDIS CONFIGURATION (for rate limiting)
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================
# Set to true to enable strict profile creation (will fail if DynamoDB profile creation fails)
PROFILE_CREATE_STRICT=false

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Uncomment and set these for production deployments
# NODE_ENV=production
# LOG_LEVEL=warn
# PROFILE_CREATE_STRICT=true
# RATE_LIMIT_MAX_REQUESTS=50
