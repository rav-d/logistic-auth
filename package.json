{
  "name": "tir-browser-auth",
  "version": "1.0.0",
  "description": "TIR Browser Platform auth Service - Production-ready authentication service with AWS Cognito and DynamoDB",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docs:generate": "node -e \"console.log(JSON.stringify(require('./src/config/swagger'), null, 2))\" > api-docs.json",
    "build": "docker build -t tir-browser-auth .",
    "build:prod": "docker build --build-arg NODE_ENV=production -t tir-browser-auth:latest .",
    "deploy:dev": "cd cdk && npm run deploy:dev",
    "deploy:prod": "cd cdk && npm run deploy:prod",
    "cdk:diff": "cd cdk && npm run diff",
    "cdk:synth": "cd cdk && npm run synth"
  },
  "keywords": [
    "tir-browser",
    "logistics",
    "microservice",
    "aws",
    "fargate",
    "cognito",
    "dynamodb",
    "authentication"
  ],
  "author": "TIR Browser Platform Team",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.699.0",
    "@aws-sdk/client-dynamodb": "^3.699.0",
    "@aws-sdk/client-s3": "^3.699.0",
    "@aws-sdk/client-secrets-manager": "^3.699.0",
    "@aws-sdk/client-ses": "^3.699.0",
    "@aws-sdk/client-sns": "^3.699.0",
    "@aws-sdk/util-dynamodb": "^3.699.0",
    "aws-sdk": "^2.1692.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "prom-client": "^15.1.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^30.0.4",
    "nodemon": "^3.1.7",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
